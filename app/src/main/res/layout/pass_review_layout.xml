<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff" >
    <RelativeLayout android:id="@+id/pass_review_title"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/start_bg">
         <TextView android:id="@+id/pass_review_title_text" 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="18sp"
                   android:gravity="center"
                   android:textColor="#ffffff"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:text="@string/dialog_tip"
                   />
    </RelativeLayout>
         
         <TextView android:id="@+id/line1" 
                   android:layout_below="@+id/pass_review_title"
                   android:layout_width="fill_parent"
                   android:layout_height="2dp"
                   android:background="#eedc82"
                   />
      <RelativeLayout android:id="@+id/pass_review_content"
                     android:layout_below="@+id/line1"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:background="#ffffff">
         <ImageView android:id="@+id/pass_review_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="10dp"
                     android:background="@drawable/ic_launcher"/>
         <TextView android:id="@+id/pass_review_message_text" 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@+id/pass_review_img"
                   android:textSize="14sp"
                   android:gravity="center"
                   android:textColor="#000000"
                   android:layout_centerVertical="true"
                   android:text="@string/dialog_message"
                   />
    </RelativeLayout>
       <!-- 事务按钮 -->
      <RelativeLayout android:id="@+id/pass_affair_layout"
                   android:layout_below="@+id/pass_review_content"
                     android:background="#c1cdc1"
                     android:layout_width="fill_parent"
                     android:layout_height="45dp" >
   
      <RelativeLayout android:id="@+id/pass_affair"
                     android:layout_centerVertical="true"
                     android:layout_centerHorizontal="true"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" >
        
          <Button  
                 android:id="@+id/pass_button"
                 android:layout_width="45dp"
                 android:layout_height="30dp"
                 android:text="@string/OK"
                 android:gravity="center"
                 android:textSize="14sp"
                 android:textColor="#ffffff"
                 android:background="@drawable/review_button_selector"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 />
           <Button  
                 android:id="@+id/pass_cancle_button"
                 android:layout_toRightOf="@+id/pass_button"
                 android:layout_marginLeft="50dp"
                 android:layout_width="45dp"
                 android:layout_height="30dp"
                 android:text="@string/cancle"
                 android:gravity="center"
                 android:textSize="14sp"
                 android:textColor="#ffffff"
                android:background="@drawable/review_button_selector"
                 android:layout_centerVertical="true"
                 />
         </RelativeLayout>
      </RelativeLayout>   
</RelativeLayout>
